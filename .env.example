# Секретный ключ Flask (генерируйте случайную строку!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# URL базы данных (для Railway используется переменная DATABASE_URL автоматически)
# Локально: sqlite:///database/affiliate.db
# Production: postgresql://user:pass@host:port/dbname
DATABASE_URL=sqlite:///database/affiliate.db

# Режим окружения
FLASK_ENV=production

# Порт (Railway устанавливает автоматически)
PORT=5000

# ===========================
# Email Configuration
# ===========================
# Настройте эти параметры для отправки email (восстановление пароля)

# SMTP сервер (Gmail, Mailgun, SendGrid и т.д.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true

# Учетные данные SMTP
# Для Gmail: используйте App Password (не обычный пароль)
# Инструкция: https://support.google.com/accounts/answer/185833
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Отправитель (From address)
MAIL_DEFAULT_SENDER=noreply@affiliatebridge.com
